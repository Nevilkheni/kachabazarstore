{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/components/*": ["src/components/*"],
      "@/redux/*": ["src/redux/*"],
      "@/api/*": ["src/api/*"]
    },

    "skipLibCheck": true,
    "strict": false,
    "noEmit": true
  },

  "include": ["src"],
  "exclude": ["backend", "node_modules"]
}
